<h3> Please login to your account </h3>

<%= semantic_form_for @session, :html => { :class => "login" }  do |form|%>

    <%= form.inputs do %>
      <%= form.semantic_errors :state %>
      <%= form.input :username, :label => 'Username', :input_html => { :size => 20 } %>
      <%= form.input :password, :label => 'Password', :input_html => { :size => 20 } %>

    <% end %>
    <%= form.buttons do %>
      <li><button class="green button" type="submit">
        Log In
      </button></li>
    <% end %>


<% end %>

