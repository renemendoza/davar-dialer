  <%= form.inputs do %>
    <%= form.input :name, :label => 'Name', :input_html => { :size => 20 } %>
    <%= form.input :email, :label => 'Email Address', :input_html => { :size => 20 } %>
    <%= form.input :username, :label => 'Username', :input_html => { :size => 20 } %>
    <%= form.input :password, :label => 'Password', :input_html => { :size => 20 } %>
    <%= form.input :password_confirmation, :label => 'Confirm your Password', :input_html => { :size => 20 } %>
    <%= form.input :ring_to_destination, :label => 'Callback Number', :input_html => { :size => 20 } %>

    <li id="agent_use_amd_input" class="boolean optional">
      <%= label("agent", "use_amd", "Detect Answering Machines?") -%>
      <%= check_box("agent", "use_amd") -%>
    </li>

    <li id="agent_automatic_dialer" class="boolean optional">
      <%= label("agent", "automatic_dialer", "Enable Automatic Dialer?") -%>
      <%= check_box("agent", "automatic_dialer") -%>
    </li>

    <%= form.input :trunk, :label => 'Send calls with another Trunk', :input_html => { :size => 20 } %>

  <% end %>
